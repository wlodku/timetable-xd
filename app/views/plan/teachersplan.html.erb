<div class="hours">
	<% (@min..@max).each do |num| %>								
		<div class="hourbox" style="width: calc(100% / <%= Setting.max %>) !important">
			<p class="number"> <%= num %> </p>
			<p class="number" id="hour"> <%= @periods[num] %> </p>
		</div>
	<% end %>
</div>
<div class="day">Pn</div>
<div class="days" style="border-top: 1px solid black;">
	<%= drawBoxTeacher(@min, @max, @cards_monday) %>
</div>
